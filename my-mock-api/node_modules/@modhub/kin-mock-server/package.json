{
    "name": "@modhub/kin-mock-server",
    "version": "1.2.3",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "files": [
        "dist",
        "cli/dist",
        "README.md"
    ],
    "bin": {
        "kin-mock-server-cli": "./cli/dist/cli.js"
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "prepublishOnly": "pnpm run build && pnpm --filter @modhub/kin-mock-server-cli run build && mkdir -p cli/dist && cp -r ../cli/dist/cli.js cli/dist/ && (cp -r ../../README.md . || cp -r ../../../README.md . || echo '# @modhub/kin-mock-server\n\nA lightweight, flexible mock server for frontend development.' > README.md)",
        "semantic-release": "semantic-release"
    },
    "keywords": [
        "mock",
        "api",
        "server",
        "testing",
        "development",
        "frontend",
        "typescript"
    ],
    "author": "",
    "license": "ISC",
    "description": "A lightweight, flexible mock server for frontend development with easy API mocking capabilities",
    "dependencies": {
        "@faker-js/faker": "^9.0.0",
        "body-parser": "^2.2.0",
        "cors": "^2.8.5",
        "express": "^4.19.2",
        "lodash-es": "^4.17.21",
        "inquirer": "^12.6.0"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/npm": "^12.0.1",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/lodash-es": "^4.17.12",
        "@types/node": "^20.17.32",
        "concurrently": "^9.0.0",
        "semantic-release": "^24.2.5",
        "tsup": "^8.0.2",
        "tsx": "^4.19.0",
        "typescript": "^5.5.4"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        },
        "./cli": {
            "require": "./cli/dist/cli.js"
        }
    }
}
